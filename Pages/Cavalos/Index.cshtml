@page
@model HipicaFacilSQL.Pages.Cavalos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro de cavalos</h1>

<p>
    <a asp-page="Create"> <i class="fa-solid fa-plus"></i> Novo Cavalo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cavalo[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cavalo[0].Raca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cavalo[0].Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cavalo[0].Peso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cavalo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
