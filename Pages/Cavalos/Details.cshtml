@page
@model HipicaFacilSQL.Pages.Cavalos.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Cavalo";
}



<div class="container">
    <h4 class="fs-2 mt-2 "><i class="fa-solid fa-magnifying-glass"></i>  - Detalhes do Cavalo</h4>
    <hr />
    <div class="row">
        <div class="col-sm-4">
            <p class="font-weight-bold mt-2">Nome:</p>
            @Model.Cavalo.Nome
        </div>
        <div class="col-sm-4">
            <p class="font-weight-bold mt-2">Proprietário:</p>
            @Model.Cavalo.Proprietario
        </div>
        <div class="col-sm-4">
            <p class="font-weight-bold mt-2">Raça:</p>
            @Model.Cavalo.Raca
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-4">
            <p class="font-weight-bold mt-2">Peso:</p>
            @Model.Cavalo.Peso
        </div>
        <div class="col-sm-4">
            <p class="font-weight-bold mt-2">Data de Nascimento:</p>
            @Model.Cavalo.Idade
        </div>
        <div class="col-sm-4">
            <p class="font-weight-bold mt-2"><u>Documentos:</u></p>
            @foreach (var docPath in @Model.Cavalo.DocumentosPaths)
            {
                <a class="text-decoration-underline" href="@docPath" target="_blank">@System.IO.Path.GetFileName(docPath)</a>

                <br />
            }
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-8">
            <p class="font-weight-bold ">Imagem:</p>
            <img src="@Model.Cavalo.ImagemPath" alt="Imagem do Cavalo" style="max-width:500px" class="border-5"  />
        </div>
        <div class="card bg-dark mt-4 col-sm-8" style="width: 18rem;">
            <img class="card-img-top" src="data:image/png;base64,@(Convert.ToBase64String(Model.QRCodeBytes))" alt="">
            <div class="card-body">
                @if (Model.QRCodeBytes != null)
                {
                <p class="card-text"><h4 class="text-center">QR Code para esta página</h4></p>
                }
            </div>
        </div>
    </div>
    <hr />
</div>
<div>
    <a asp-page="./Index"><i class="fa-solid fa-backward-step"></i> Voltar para a tabela </a> |
    <a asp-page="./Edit" asp-route-id="@Model.Cavalo.ID"><i class="fa-solid fa-pen"></i> Editar Cavalo</a> 
   
</div>


