@page
@model HipicaFacilSQL.Pages.Produtos.DetailsModel

@{
    ViewData["Title"] = "Details";
} 

<div>
    <h4>Detalhes do Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Validade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Validade)
        </dd>
        <dt class="col-sm-2">
           Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Quantidade)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index"><i class="fa-solid fa-backward-step"></i> Voltar para a tabela </a> |
    <a asp-page="./Edit" asp-route-id="@Model.Produto.ID"><i class="fa-solid fa-pen"></i> Editar Produto</a>
</div>
