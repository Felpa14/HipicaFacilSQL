@page
@model HipicaFacilSQL.Pages.Cavalos.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Cavalo";
}

<h1>Detalhes do Cavalo</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Cavalo.Nome
        </dd>
        <dt class="col-sm-2">
            Proprietário
        </dt>
        <dd class="col-sm-10">
            @Model.Cavalo.Proprietario
        </dd>
        <dt class="col-sm-2">
            Raça
        </dt>
        <dd class="col-sm-10">
            @Model.Cavalo.Raca
        </dd>
        <dt class="col-sm-2">
            Peso
        </dt>
        <dd class="col-sm-10">
            @Model.Cavalo.Peso
        </dd>
        <dt class="col-sm-2">
            Data de Nascimento
        </dt>
        <dd class="col-sm-10">
            @Model.Cavalo.Idade
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Imagem
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Cavalo.ImagemPath" alt="Imagem do Cavalo" style="max-width=200px" />
        </dd>
    </dl>
        <dl class="row">
        <dt class="col-sm-2">
            Documentos
        </dt>
        <dd class="col-sm-10">
            @foreach (var docPath in @Model.Cavalo.DocumentosPaths)
            {
                <a href="@docPath" target="_blank">@System.IO.Path.GetFileName(docPath)</a>

                <br />
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Index"><i class="fa-solid fa-backward-step"></i> Voltar para a tabela </a> |
    <a asp-page="./Edit" asp-route-id="@Model.Cavalo.ID"><i class="fa-solid fa-pen"></i>Editar Cavalo</a> 
   
</div>

<hr />
<h4>QR Code para esta página</h4>
@if (Model.QRCodeBytes != null)
{
    <img class="rounded mx-auto d-block" src = "data:image/png;base64,@(Convert.ToBase64String(Model.QRCodeBytes))" alt = "QR Code" />
}