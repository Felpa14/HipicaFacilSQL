@model HipicaFacilSQL.Pages.Produtos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="fs-2"><i class="fa-solid fa-box"></i>&ensp;Cadastro de Produto</h1>
<hr />
<br />

<form method="post" id="create-form">

    <div class="container text-center">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-floating">
                    <input type="text" class="form-control" id="nome" placeholder="" required asp-for="Produto.Nome" />
                    <label for="nome">Nome:</label>
                    <small class="text-muted">Ex: Feno</small>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-floating">
                    <select id="raca" asp-for="Produto.Tipo" class="form-select" required>
                        <option value="">Selecione o tipo do produto</option>
                        <option value="Perecivel">Perecível</option>
                        <option value="Não perecivel">Nao Perecível</option>                       
                    </select>
                    <label for="tipo">Tipo:</label>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-4">
                <div class="form-floating">
                    <input type="text" id="descricao" asp-for="Produto.Descricao" class="form-control" placeholder=" " />
                    <label for="descricao">Descrição:</label>
                    <small class="text-muted">Ex: Ração do cavalo</small>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-floating">
                <input type="text" id="data" asp-for="Produto.Validade" class="form-control" placeholder=" " maxlength="10" required pattern="\d{2}/\d{2}/\d{4}" oninput="formatarData(this)" />
                <label for="data">Validade:</label>
                <small class="text-muted">Ex: 04/10/2032</small>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-floating">
                    <input type="number" id="quantidade" asp-for="Produto.Quantidade" class="form-control" placeholder=" " />
                    <label for="Quantidade">Quantidade:</label>
                    <small class="text-muted">Ex: 5</small>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-12">
                    <button type="submit" value="Create" class="btn mt-3" id="submit-button">Adicionar Produto</button>
                    <div id="submit-icon" style="display: none;">
                        <i id="loading-icon-submit" class="fas fa-spinner fa-spin fa-2xl"></i>
                        <i id="success-icon-submit" class="fas fa-check text-success fa-2xl" style="display: none; color:green"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-page="Index"><i class="fa-solid fa-backward-step"></i>  Voltar para a Tabela</a>
</div>
