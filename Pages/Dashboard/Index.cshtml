@page
@model HipicaFacilSQL.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chart.js">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<h4 class="fs-2 mt-2"><i class="fa-solid fa-chart-simple"></i>&ensp;Dashboard</h4>
<hr />

<div class="container">
    <p class="text-center mt-2 ">Média Total: @Model.MediaTotal.ToString("C")</p>
</div>

<div class="container">
    <canvas id="financeChart" width="800" height="400"></canvas>
</div>

@section Scripts {
    <script>
        var ctx = document.getElementById('financeChart').getContext('2d');
        var financeData = @Html.Raw(Model.FinanceChartData());

        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: financeData.labels,
                datasets: [{
                    label: 'Valor: R$',
                    data: financeData.values,
                    backgroundColor: financeData.values.map(val => val < 0 ? 'rgba(255, 99, 132)' : 'rgba(219, 174, 63)'),
                    borderColor: financeData.values.map(val => val < 0 ? 'rgba(247, 247, 247)' : 'rgba(247, 247, 247)'),
                    borderWidth: 2,
                    borderRadius: 6
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            callback: function (value, index, values) {
                                return 'R$ ' + Math.abs(value).toFixed(2);
                            }
                        }
                    }]
                }
            }
        });
    </script>
}
