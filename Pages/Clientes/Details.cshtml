@page
@model HipicaFacilSQL.Pages.Clientes.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Detalhes dos Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class="col-sm-2">
           E-mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Email)
        </dd>
        <dt class="col-sm-2">
            Endereço
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Endereco)
        </dd>
        <dt class="col-sm-2">
            CPF
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Cidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Cidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Complemento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Complemento)
        </dd>
        <dt class="col-sm-2">
           CEP
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Cep)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index"><i class="fa-solid fa-backward-step" ></i> Voltar para a tabela </a> |
    <a asp-page="./Edit" asp-route-id="@Model.Cliente.ID"><i class="fa-solid fa-pen"></i> Editar Cliente</a>
</div>
