@page
@model HipicaFacilSQL.Pages.Cavalos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes dos Cavalos</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cavalo.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cavalo.Nome)
        </dd>
        <dt class="col-sm-2">
            Raça
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cavalo.Raca)
        </dd>
        <dt class="col-sm-2">
            Data de Nascimento
        </dt>
        <br/>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cavalo.Idade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cavalo.Peso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cavalo.Peso)
        </dd>
        <dt class="col-sm-2">
            Imagem do Cavalo
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Cavalo.ImagemPath" alt="Imagem do Cavalo" width="250" />
        </dd>

    
    </dl>
</div>
<div>
   
    <a asp-page="./Index"><i class="fa-solid fa-backward"></i> Voltar para a tabela </a> |
    <a asp-page="./Edit" asp-route-id="@Model.Cavalo.ID"><i class="fa-solid fa-pen"></i> Editar cavalo</a> 
</div>
